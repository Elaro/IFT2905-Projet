<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/bixilocationtextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPostalAddress"
            android:hint="@string/bixi_tooltip" />

        <Button
            android:id="@+id/bixibutton"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="@string/bixi_button" />

    </LinearLayout>

    <Button
        android:id="@+id/bixilistbutton"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="@string/bixi_list_button" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/biximapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>